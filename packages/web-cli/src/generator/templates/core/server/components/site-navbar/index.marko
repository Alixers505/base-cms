import { getAsArray, get} from '@base-cms/object-path';

$ const { site, config } = out.global;
$ const logo = site.get('logo');

<nav class="site-navigation">
  <a href="/">
    <if(logo)>
      <img title=config.siteName() src=logo height="40">
    </if>
    <else>
      <h3>${config.siteName()}</h3>
    </else>
  </a>

  <ul>
    <for|item| of=site.getAsArray('primaryNavItems')>
      <li>
        <a href=item.href>${item.label}</a>
      </li>
    </for>
  </ul>
  <hr>
</nav>
