import { getAsArray } from "@base-cms/object-path";

$ const nodes = getAsArray(input, "nodes");
$ const blockName = input.blockName || "node-list";

<if(nodes.length)>
  <marko-web-node-list-element block-name=blockName name="nodes">
    <for|node, index| of=nodes>
      <marko-web-node-list-element block-name=blockName name="node">
        <${input.renderBody} node=node index=index block-name=blockName />
      </marko-web-node-list-element>
    </for>
  </marko-web-node-list-element>
</if>
