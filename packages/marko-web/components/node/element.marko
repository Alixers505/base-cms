import { getAsArray } from "@base-cms/object-path";

$ const tag = input.tag || "div";
$ const block = input.blockName || "node";
$ const element = `${block}__${input.name}`;
$ const classNames = [element, ...getAsArray(input.modifiers).map(mod => `${element}--${mod}`)];

<if(input.renderBody)>
  <${tag} ...input.attrs class=classNames>
    <${input.renderBody} block-name=block />
  </>
</if>
