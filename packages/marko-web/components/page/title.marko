import { cleanPath } from '@base-cms/utils';

$ const { config } = out.global;
$ const parts = [
  input.value,
  config.siteName(),
];
$ const concateWith = input.concateWith || '|';
$ const title = parts.filter(v => v).join(` ${concateWith} `);

<title>
  <if(input.renderBody)>
    <${input.renderBody} />
  </if>
  <else>
    ${title}
  </else>
</title>
