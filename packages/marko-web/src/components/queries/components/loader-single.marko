$ const isDevelopment = process.env.NODE_ENV === 'development';

<await(input.loader(out.global.apollo, input))>
  <@then|{ node }|>
    <${input.renderBody} node=node />
  </@then>
  <@catch|err|>
    <if(input.onError)>
      <${input.onError} err=err />
    </if>
    <else>
      <pre>An unexpected error occurred: ${err.message}</pre>
      <if(isDevelopment)>
        <pre>${err.stack}</pre>
      </if>
    </else>
  </@catch>
</await>
