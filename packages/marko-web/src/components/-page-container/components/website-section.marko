import { get } from '@base-cms/object-path';

$ const id = get(input, 'data.id');
$ const alias = get(input, 'data.alias', '');
$ const type = alias.replace('/', '-');

<${input.tag || 'main'}
  data-id=`${id}`
  class=['website-section', 'website-section--display', `website-section--${type}`, input.class]
  ...input.attrs
  >
  <${input.renderBody} />
</>
