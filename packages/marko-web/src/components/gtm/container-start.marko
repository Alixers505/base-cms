import { isObject } from '@base-cms/utils';

$ const { isArray } = Array;

$ const names = (isArray(input.name) ? input.name : [input.name]).filter(v => v);
$ const payload = {
  'gtm.start': new Date().getTime(),
  event: 'gtm.js',
};

<for|name| of=names>
  <cms-gtm-container-push name=name data=payload />
</for>
