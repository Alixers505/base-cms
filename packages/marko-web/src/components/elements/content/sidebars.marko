import { getAsArray } from '@base-cms/object-path';
import { elementClassNames } from '@base-cms/web-common/utils';

$ const block = input.block || 'article-sidebars';
$ const sidebars = getAsArray(input.obj, 'sidebars');

<if(sidebars.length)>
  <${input.tag || "aside"} class=block ...input.attrs>
    <for|sidebar| of=sidebars>
      $ const obj = { sidebar };
      <cms-html-element tag="div" obj=obj field="sidebar" class=`${block}__sidebar` />
    </for>
  </>
</if>
