import { cleanPath } from '@base-cms/utils';
import { get } from '@base-cms/object-path';

$ const parts = [
  input.value,
  get(out.global, 'config.siteName'),
];
$ const concateWith = input.concateWith || '|';
$ const title = parts.filter(v => v).join(` ${concateWith} `);

<title>
  <if(input.renderBody)>
    <${input.renderBody} />
  </if>
  <else>
    ${title}
  </else>
</title>
