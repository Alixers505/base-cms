import { getAsObject } from '@base-cms/object-path';

$ const content = getAsObject(input, 'content');

<document>
  <@head>
    <-page-metadata for="content" ...content />
    <${input.head} />
  </@head>
  <-page-container for="content" class="container" data=content>
    <cms-ad-placeholder size="970x90" class="mb-4 text-center" />
    <${input.renderBody} />
  </-page-container>
  <site-footer />
</document>
