import { getAsObject, get } from '@base-cms/object-path';
import GAM from '../../../../config/gam';

$ const issue = getAsObject(input, 'issue');

<document>
  <@head>
    <cms-page-metadata for="magazine-issue" ...issue />
    <marko-web-gam-head
      slots={
        'gpt-ad-bs': GAM.getAdUnit({ name: 'BS' }),
        'gpt-ad-mr': GAM.getAdUnit({ name: 'MR' }),
        'gpt-ad-hp': GAM.getAdUnit({ name: 'HP' }),
      }
    />
    <${input.head} />
  </@head>
  <cms-page-container for="magazine-issue" class="container-fluid-max" data=issue>
    <${input.renderBody} />
  </cms-page-container>
  <hr>
  <site-footer />
</document>
