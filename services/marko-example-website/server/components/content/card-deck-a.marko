import { asArray } from '@base-cms/utils';
import GAM from '../../../config/gam';

$ const nodes = asArray(input.nodes);
$ const coreClass = 'mb-4 col-12 col-md-6 col-lg-4';

<if(nodes.length)>
  <div class="row">
    <for|node, index| of=nodes>
      <div class=coreClass>
        <div class="card content-card-deck">
          <content-card-body-a content=node />
        </div>
      </div>
      <if(index === 3)>
        <div class=coreClass>
          <div class="card content-card-deck">
            <div class="card-body d-flex justify-content-center align-items-center">
              <gam-define-display-ad ...GAM.getAdUnit({ name: "MR" }) />
            </div>
          </div>
        </div>
      </if>
    </for>
  </div>
</if>
