import { getAsObject } from '@base-cms/object-path';

$ const page = getAsObject(input, 'page');

<-document>
  <@head>
    <-page-metadata for="dynamic-page" ...page />
    <${input.head} />
  </@head>
  <@body-footer>
    <browser-refresh />
  </@body-footer>
  <site-navbar />
  <-page-container for="dynamic-page" class="container-fluid" data=page>
    <${input.renderBody} />
  </-page-container>
  <hr>
  <site-footer />
</-document>
