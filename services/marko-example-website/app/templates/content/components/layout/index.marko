import { getAsObject } from '@base-cms/object-path';

$ const content = getAsObject(input, 'content');

<document>
  <@head>
    <-page-metadata for="content" ...content />
    <${input.head} />
  </@head>
  <-page-container for="content" class="container-fluid" data=content>
    <-ad-placeholder size="970x90" class="text-center mb-4" />
    <hr />
    <${input.renderBody} />
    <hr />
  </-page-container>
  <site-footer />
</document>
