  {{/content/browse/left-menu/button}}

  {{!-- Status --}}
  {{#content/browse/left-menu/button
    title="Status"
    for="status"
    activeMenu=activeMenu
    on-click=(action "setActiveMenu")
  }}
    {{entypo-icon "light-bulb" class="text-white h2"}}
  {{/content/browse/left-menu/button}}

  {{!-- Scheduling --}}
  {{#content/browse/left-menu/button
    title="Scheduling"
    for="scheduling"
    activeMenu=activeMenu
    on-click=(action "setActiveMenu")
  }}
    {{entypo-icon "pin" class="text-white h2"}}
  {{/content/browse/left-menu/button}}

  {{!-- Taxonomy --}}
  {{#content/browse/left-menu/button
    title="Taxonomy"
    for="taxonomy"
    activeMenu=activeMenu
    on-click=(action "setActiveMenu")
  }}
    {{entypo-icon "price-tag" class="text-white h2"}}
  {{/content/browse/left-menu/button}}


  {{!-- Dates --}}
  {{#content/browse/left-menu/button
    title="Dates"
    for="dates"
    activeMenu=activeMenu
    on-click=(action "setActiveMenu")
  }}
    {{entypo-icon "calendar" class="text-white h2"}}
  {{/content/browse/left-menu/button}}
</div>
