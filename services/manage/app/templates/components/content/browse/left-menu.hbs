  </div>
{{/content/browse/left-menu/tab-content}}

<div class="tab-seperator {{if open "open" ""}}"></div>

<div class="tabs d-flex flex-column">
  {{!-- Content Types --}}
  {{#content/browse/left-menu/button
    class="mt-3"
    title="Content Types"
    for="types"
    activeMenu=activeMenu
