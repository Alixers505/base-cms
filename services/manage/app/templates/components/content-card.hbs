<div class="card z-depth-1 border-0 mnh-100">
  {{#link-to "content.edit" typeDasherized id}}
    <img class="card-img-top" src={{imageSrc}} alt={{imageAlt}}>
    <div class="card-img-overlay">
      <div class="d-flex justify-content-between">
        {{content-card/status-badge status=status}}
        {{content-card/type-badge type=type}}
      </div>
    </div>
  {{/link-to}}
  <div class="card-body">
    <h4 class="card-title">
      {{#link-to "content.edit" typeDasherized id}}
        {{title}}
      {{/link-to}}
    </h4>
    <p class="card-text mb-0">
      {{teaserTruncated}}
    </p>
  </div>
</div>
