<div class="card content z-depth-1 border-0 mnh-100">

  <div class="embed-responsive embed-responsive-16by9">
    <div class="embed-responsive-item d-flex align-items-center">
      {{#if imageSrc}}
        {{!-- @todo Display placeholder when no image exits --}}
        {{#if hasLogoImage}}
          {{!-- @todo Create a content card image component to wrap this --}}
          {{!-- @todo Detect faces and, if present, use face crop --}}
          {{imgix-img
            class="card-img-top img-fluid"
            originalSrc=imageSrc
            alt=imageAlt
            fit="clip"
            w="480"
            h="270"
          }}
        {{else}}
          {{imgix-img
            class="card-img-top img-fluid"
            originalSrc=imageSrc
            alt=imageAlt
            crop="focalpoint"
            fp-x="0.5"
            fp-y="0.5"
            fit="crop"
            w="480"
            h="270"
          }}
        {{/if}}
      {{/if}}
      {{#link-to "content.edit" typeDasherized id}}
        <div class="card-img-overlay">
          <div class="d-flex justify-content-between">
            {{content-card/status-badge status=status}}
            {{content-card/type-badge type=type}}
          </div>
        </div>
      {{/link-to}}
    </div>
  </div>

  <div class="card-body">
    <h4 class="card-title">
      {{#link-to "content.edit" typeDasherized id}}
        {{title}}
      {{/link-to}}
    </h4>
    <p class="card-text mb-0">
      {{teaserTruncated}}
    </p>
  </div>

  <div class="card-footer pt-2 pb-1">
    <small class="text-muted d-block">
      Updated
      <span title={{updatedDate}}>
        {{updatedFromNow}}
      </span>
      by {{username}}
    </small>

    <div class="d-flex flex-row justify-content-between align-items-center mt-1">
      <small>ID: {{id}}</small>
      <label class="custom-toggle">
        <input type="checkbox">
        <span class="custom-toggle-slider rounded-circle"></span>
      </label>
    </div>

  </div>
</div>
