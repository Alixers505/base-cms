    <td bgcolor="#ecedee">
      <common-table width="630" align="center" class="main">
        <tr>
          <common-view-online-element name=input.name />
        </tr>
        <if(adUnit.path)>
          <tr>
            <td align="center">
              <div class="advertisement inline ad-600x100">
                <marko-newsletters-gam-display>
                  <@ad-unit ...adUnit />
                </marko-newsletters-gam-display>
              </div>
            </td>
          </tr>
        </if>
        <tr>
          <td height="20" class="short">&nbsp;</td>
        </tr>
      </common-table>
    </td>
  </tr>
</common-table>
